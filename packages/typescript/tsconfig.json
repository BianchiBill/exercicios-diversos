{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "../typescript/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}